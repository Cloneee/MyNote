<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mynote" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/splash_screen_theme" >
        <activity
            android:name=".screens.register.OtpScreen"
            android:exported="false"
            android:label="@string/title_activity_otp_screen"
            android:theme="@style/splash_screen_theme.NoActionBar" />
        <activity
            android:name=".screens.note.NoteScreen"
            android:exported="false" />
        <activity
            android:name=".screens.register.RegisterScreen"
            android:exported="false" />
        <activity
            android:name=".screens.home.HomeScreen"
            android:exported="false" />
        <activity
            android:name=".screens.login.LoginScreen"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>