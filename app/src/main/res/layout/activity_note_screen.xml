<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.note.NoteScreen"
    android:background="@color/background"
    android:orientation="vertical"

    >
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="30dp"
        android:paddingStart="75dp"
        android:paddingTop="40dp"
        android:paddingBottom="116dp"
        android:background="@drawable/note_background"
        android:backgroundTint="@color/note_background"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
           <ImageView
               android:layout_width="40dp"
               android:layout_height="match_parent"
               android:src="@drawable/ic_pin"
               app:tint="@color/white_text"
               android:textAlignment="center"
               android:contentDescription="@string/img_description_note_pin"
               />
           <View
               android:layout_width="20dp"
               android:layout_height="0dp"/>
           <EditText
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:padding="10dp"
               android:maxLines="1"
               android:background="@drawable/note_input"
               android:layout_marginBottom="10dp"
               android:textSize="30sp"
               android:fontFamily="cursive"
               android:textColor="@color/white_text"
               android:autofillHints="Title"
               android:textColorHint="@color/white_semi"
               />
       </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/note_input"
            android:gravity="top"
            android:inputType="text|textMultiLine"
            android:textColor="@color/white_text"
            android:padding="10dp"
            android:lineHeight="46dp" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_more"
        android:src="@drawable/ic_add_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="-90dp"
        android:layout_marginBottom="10dp"
        app:borderWidth="2dp"
        app:maxImageSize="46dp"
        app:tint="@color/white"
        app:backgroundTint="@color/white"
        android:backgroundTint="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/main_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/action_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/add_more"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="20dp"
        android:paddingHorizontal="40dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/action_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@android:drawable/ic_menu_save"
            app:tint="@color/background"
            android:padding="10dp"
            />
